<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGradless"
    android:orientation="vertical">
    <!--确定-->

    <View
        android:background="@drawable/bg_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_2"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="16"-->
            <!--android:background="@drawable/et_bg_1"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/user"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="用户名:"
                    android:textColor="@color/colorWhiteBGText" />


            </LinearLayout>



            <EditText
                android:id="@+id/login_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:hint="请输入用户名:"
                android:textSize="12sp"
                android:background="@null"
                android:textColor="@color/colorTextQin" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/password"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="密码:"
                    android:textColor="@color/colorWhiteBGText" />


            </LinearLayout>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:password="true"
                android:hint="请输入密码:"
                android:textSize="12sp"
                android:ems="10"
                android:textColor="@color/colorTextQin" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12.2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/server_setting"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="34"
                        android:gravity="center_vertical"
                        android:text="@string/server_setting"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <com.gt.cscity.planning.ui.activity.CheckBoxView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:color_background="@color/colorGradles"
                        app:color_border="@color/colorQHuiSe"
                        app:size="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:text="记住密码"
                        android:textColor="@color/colorQHuiSe"
                        android:textSize="16dp" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                android:background="@drawable/et_bg_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/login_login"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80dp"
                        android:layout_weight="34"
                        android:gravity="center_vertical"
                        android:text="在线登录"
                        android:textColor="@color/colorZhongSe"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/login_cancer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="80dp"
                        android:gravity="center_vertical"
                        android:text="离线登录"
                        android:textColor="@color/colorZhongSe"
                        android:textSize="16sp" />

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/no_bg"/>
</LinearLayout>